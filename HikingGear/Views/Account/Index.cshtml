@{
  Layout = "_Layout";
}

@using System.Security.Claims

<div class="viewContainer">
<h2>Authentication with Identity</h2>
<hr />
    @if (User.Identity.IsAuthenticated)
    {
        <p>Hello @User.Identity.Name!</p>
        @using (Html.BeginForm("LogOff", "Account"))
        {
            <input type="submit" class="btn btn-default homeLink" value="Log out" />
        }
    }
    else
    {
        <button class="button-30">@Html.ActionLink("Register", "Register")</button>
        <button class="button-30">@Html.ActionLink("Log in", "Login")</button>
    }
</div>