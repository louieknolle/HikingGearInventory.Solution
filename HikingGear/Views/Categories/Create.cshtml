@{
  Layout = "_Layout";
}

@model HikingGear.Models.Category

<div class="viewContainer">
  <h3>New category</h3>
  @using (Html.BeginForm())
  {
    <span class="labelSpan">@Html.LabelFor(model => model.Name)</span>
    @Html.TextBoxFor(model => model.Name, new { @required = "required"})
    <input type="submit" value="Add new category" class="addNewBtn" />
  }

  <div class="linksContainer">
    <p>@Html.ActionLink("Show all categories", "Index")</p>
  </div>
</div>