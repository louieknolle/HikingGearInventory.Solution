@{
  Layout = "_Layout";
}

@model HikingGear.Models.Gear

<div class="viewContainer">
  <h3>Add a new piece of gear</h3>

  <div class="createGearForm">
    @using (Html.BeginForm())
    {
        <div>
          @Html.LabelFor(model => model.Brand)
          @Html.TextBoxFor(model => model.Brand)
        </div>
        <div>
          @Html.LabelFor(model => model.Name)
          @Html.TextBoxFor(model => model.Name)
        </div>
        <div>
          @Html.LabelFor(model => model.Description)
          @Html.TextBoxFor(model => model.Description)
        </div>
        <div>
          @Html.LabelFor(model => model.PurchaseYear)
          @Html.TextBoxFor(model => model.PurchaseYear)
        </div>
        <div>
          @Html.Label("Select category")
          @Html.DropDownList("CategoryId")
        </div>

        <input type="submit" value="Add new gear" class="" />
    }
  </div>

  <div class="linksContainer">
    <p>@Html.ActionLink("Show all gear", "Index")</p>
  </div>
</div>